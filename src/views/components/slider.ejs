<section class='slider contenedor-slider glide'>
  <h2 class="slider__title"><%=view.slider_titulo %></h2>
  <div class="glide__track" data-glide-el="track">
      <ul class="slider__items glide__slides">
        <% collections.forEach( collection => { %>
          <li class="slider__item glide__slide">
              <article class="card-item">
                  <a class="card-item__link" href="">
                  <picture class="card-item__cover">
                          <span class="card-item__tag">Nuevo</span>
                          <img class="card-item__img--front" src="<%= collection.img_front %>" alt="<%= collection.product_description%>">
                          <img class="card-item__img--back" src="<%= collection.img_back %>" alt="<%= collection.product_description%> en caja">
                      </picture>
                  <div class="card-item__content">
                          <p class="card-item__licence"><%= collection.product_name %></p>
                          <h4 class="card-item__name"><%= collection.licence_name %></h4>
                          <p class="card-item__price"><%= collection.product_price %></p>
                          <p class="card-item__promo">3 CUOTAS SIN INTERÃ‰S</p>
                  </div>
                  </a>
              </article>
          </li>
          <% }); %>
          
      </ul>
  </div>
  <div class="glide__arrows" data-glide-el="controls">
      <button class="glide__arrow glide__arrow--left" data-glide-dir="<"><iconify-icon icon="tabler:chevron-left"></iconify-icon></button>
      <button class="glide__arrow glide__arrow--right" data-glide-dir=">"><iconify-icon icon="tabler:chevron-right"></iconify-icon></button>
  </div>
</section>

<script src='https://cdn.jsdelivr.net/npm/iconify-icon@1.0.7/dist/iconify-icon.min.js'></script>
<script src='https://cdn.jsdelivr.net/npm/@glidejs/glide'></script>
<script>
    new Glide('.glide',
        {
            type: 'carousel',
            startAt: 0,
            perView: 3,
            gap: 30,
            breakpoints: {
                991: {
                    perView: 2
                    },
                768: {
                    perView: 1
                }
            }
        }
    ).mount();
</script>
